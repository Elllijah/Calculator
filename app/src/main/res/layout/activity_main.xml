<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_purp_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:textColor="@color/text_num_color"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="22sp"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/math_expression"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@color/text_num_color"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="30sp"
        android:singleLine="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4c2f75"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                style="@style/action_button_style"
                android:id="@+id/AC_btn"
                android:text="AC"
                />
            <TextView
                style="@style/action_button_style"
                android:id="@+id/l_bracket_btn"
                android:text="("
                />
            <TextView
                style="@style/action_button_style"
                android:id="@+id/r_bracket_btn"
                android:text=")"
                />
            <TextView
                style="@style/action_button_style"
                android:id="@+id/divide_btn"
                android:text="/"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                style="@style/num_button_style"
                android:id="@+id/btn_1"
                android:text="1"
                />
            <TextView
                style="@style/num_button_style"
                android:id="@+id/btn_2"
                android:text="2"
                />
            <TextView
                style="@style/num_button_style"
                android:id="@+id/btn_3"
                android:text="3"
                />
            <TextView
                style="@style/action_button_style"
                android:id="@+id/mult_btn"
                android:text="*"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                style="@style/num_button_style"
                android:id="@+id/btn_4"
                android:text="4"
                />
            <TextView
                style="@style/num_button_style"
                android:id="@+id/btn_5"
                android:text="5"
                />
            <TextView
                style="@style/num_button_style"
                android:id="@+id/btn_6"
                android:text="6"
                />
            <TextView
                style="@style/action_button_style"
                android:id="@+id/add_btn"
                android:text="+"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                style="@style/num_button_style"
                android:id="@+id/btn_7"
                android:text="7"
                />
            <TextView
                style="@style/num_button_style"
                android:id="@+id/btn_8"
                android:text="8"
                />
            <TextView
                style="@style/num_button_style"
                android:id="@+id/btn_9"
                android:text="9"
                />
            <TextView
                style="@style/action_button_style"
                android:id="@+id/subtract_btn"
                android:text="-"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                style="@style/num_button_style"
                android:id="@+id/point_btn"
                android:text="."
                />
            <TextView
                style="@style/num_button_style"
                android:id="@+id/btn_0"
                android:text="0"
                />
            <TextView
                style="@style/num_button_style"
                android:id="@+id/del_btn"
                android:text="Del"
                />
            <TextView
                style="@style/action_button_style"
                android:id="@+id/equal_btn"
                android:text="="
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

